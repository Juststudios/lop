<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lop â€” NFC Contact Share"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Profile Info -->
        <EditText
            android:id="@+id/nameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:text="John Doe"
            android:enabled="false"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/phoneField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:text="+1234567890"
            android:enabled="false"
            android:inputType="phone"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:text="john@example.com"
            android:enabled="false"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Social Links -->
        <EditText
            android:id="@+id/instagramField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instagram"
            android:text="@john_insta"
            android:enabled="false"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/snapchatField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Snapchat"
            android:text="@john_snap"
            android:enabled="false"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Share Button -->
        <Button
            android:id="@+id/btnShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Contact"
            android:backgroundTint="#007BFF"
            android:textColor="@android:color/white"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Settings Button -->
        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:backgroundTint="#6C757D"
            android:textColor="@android:color/white"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp" />

    </LinearLayout>
</ScrollView>